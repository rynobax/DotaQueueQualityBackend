{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
        "*": [
          "node_modules/*"
        ]
    },
    "target": "es6"
  },
  "include": [
      "index.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}